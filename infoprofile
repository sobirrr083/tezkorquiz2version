    <script type="module">
        import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js';
        import { getAuth, onAuthStateChanged } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js';
        import { getFirestore, doc, getDoc, setDoc } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-firestore.js';
        import { getStorage, ref, uploadBytes, getDownloadURL } from 'https://www.gstatic.com/firebasejs/10.8.0/firebase-storage.js';

        // Firebase config
        const firebaseConfig = {
            apiKey: "AIzaSyBxIpLY5WasiSIlDL4japBLnnXRwOLUKEQ",
            authDomain: "tezkor-quiz-bbe3c.firebaseapp.com",
            projectId: "tezkor-quiz-bbe3c",
            storageBucket: "tezkor-quiz-bbe3c.firebasestorage.app",
            messagingSenderId: "143161522496",
            appId: "1:143161522496:web:252108ace3a4c19f35e2a5"
        };

        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const db = getFirestore(app);
        const storage = getStorage(app);

        let currentUser = null;
        let currentMode = 'view';

        // DOM elements
        const headerAvatar = document.getElementById('headerAvatar');
        const headerName = document.getElementById('headerName');
        const headerEmail = document.getElementById('headerEmail');
        const avatarInput = document.getElementById('avatarInput');
        const profileForm = document.getElementById('profileForm');
        const saveBtn = document.getElementById('saveBtn');
        const alertContainer = document.getElementById('alertContainer');

        // Close profile
        window.closeProfile = function() {
            if (window.opener) {
                window.close();
            } else {
                window.history.back();
            }
        };

        // Switch mode
        window.switchMode = function(mode) {
            currentMode = mode;
            document.querySelectorAll('.mode-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.profile-section').forEach(section => section.classList.remove('active'));
            
            if (mode === 'view') {
                document.querySelector('.mode-btn:first-child').classList.add('active');
                document.getElementById('viewSection').classList.add('active');
            } else {
                document.querySelector('.mode-btn:last-child').classList.add('active');
                document.getElementById('editSection').classList.add('active');
            }
        };

        // Show alert
        function showAlert(message, type = 'success') {
            alertContainer.innerHTML = `
                <div class="alert alert-${type}">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                    <span>${message}</span>
                </div>
            `;
            setTimeout(() => alertContainer.innerHTML = '', 5000);
        }

        // Load user data
        async function loadUserData(user) {
            try {
                const userDoc = await getDoc(doc(db, 'users', user.uid));
                const userData = userDoc.exists() ? userDoc.data() : {};

                // Header
                headerName.textContent = userData.displayName || user.displayName || 'Foydalanuvchi';
                headerEmail.textContent = user.email;

                // Avatar
                if (userData.photoURL || user.photoURL) {
                    headerAvatar.innerHTML = `<img src="${userData.photoURL || user.photoURL}" alt="Avatar">`;
                }

                // View mode
                document.getElementById('viewName').textContent = userData.displayName || user.displayName || '-';
                document.getElementById('viewEmail').textContent = user.email;
                document.getElementById('viewLocation').textContent = userData.location || '-';
                document.getElementById('viewEducation').textContent = userData.education || '-';
                document.getElementById('viewBio').textContent = userData.bio || '-';

                // Edit mode
                document.getElementById('editName').value = userData.displayName || user.displayName || '';
                document.getElementById('editEmail').value = user.email;
                document.getElementById('editLocation').value = userData.location || '';
                document.getElementById('editEducation').value = userData.education || '';
                document.getElementById('editBio').value = userData.bio || '';
            } catch (error) {
                console.error('Error loading user data:', error);
                showAlert('Ma\'lumotlarni yuklashda xatolik', 'danger');
            }
        }

        // Upload avatar
        avatarInput.addEventListener('change', async (e) => {
            const file = e.target.files[0];
            if (!file) return;

            // Check file size (max 2MB)
            if (file.size > 2 * 1024 * 1024) {
                showAlert('Rasm hajmi 2MB dan oshmasligi kerak', 'danger');
                return;
            }

            // Check file type
            if (!file.type.startsWith('image/')) {
                showAlert('Faqat rasm yuklash mumkin', 'danger');
                return;
            }

            try {
                // Show loading
                const btn = document.querySelector('.change-avatar-btn');
                const originalHTML = btn.innerHTML;
                btn.innerHTML = '<div class="spinner" style="width: 16px; height: 16px; border-width: 2px;"></div>';
                btn.disabled = true;

                // Upload to Firebase Storage
                const storageRef = ref(storage, `avatars/${currentUser.uid}`);
                await uploadBytes(storageRef, file);
                const photoURL = await getDownloadURL(storageRef);

                // Update Firestore
                await setDoc(doc(db, 'users', currentUser.uid), {
                    photoURL: photoURL
                }, { merge: true });

                // Update UI
                headerAvatar.innerHTML = `<img src="${photoURL}" alt="Avatar">`;
                showAlert('Profil rasmi o\'zgartirildi', 'success');

                btn.innerHTML = originalHTML;
                btn.disabled = false;
            } catch (error) {
                console.error('Error uploading avatar:', error);
                showAlert('Rasmni yuklashda xatolik', 'danger');
                const btn = document.querySelector('.change-avatar-btn');
                btn.innerHTML = '<i class="fas fa-camera"></i>';
                btn.disabled = false;
            }
        });

        // Save profile
        profileForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            const name = document.getElementById('editName').value.trim();
            const location = document.getElementById('editLocation').value.trim();
            const education = document.getElementById('editEducation').value.trim();
            const bio = document.getElementById('editBio').value.trim();

            if (!name) {
                showAlert('Iltimos, ismingizni kiriting', 'danger');
                return;
            }

            try {
                // Show loading
                saveBtn.disabled = true;
                saveBtn.querySelector('span').classList.add('hidden');
                saveBtn.querySelector('.spinner').classList.remove('hidden');

                // Save to Firestore
                await setDoc(doc(db, 'users', currentUser.uid), {
                    displayName: name,
                    location: location,
                    education: education,
                    bio: bio,
                    updatedAt: new Date().toISOString()
                }, { merge: true });

                // Update UI
                await loadUserData(currentUser);
                showAlert('Ma\'lumotlar saqlandi', 'success');
                
                // Switch to view mode
                setTimeout(() => switchMode('view'), 1000);

            } catch (error) {
                console.error('Error saving profile:', error);
                showAlert('Saqlashda xatolik', 'danger');
            } finally {
                saveBtn.disabled = false;
                saveBtn.querySelector('span').classList.remove('hidden');
                saveBtn.querySelector('.spinner').classList.add('hidden');
            }
        });

        // Auth state listener
        onAuthStateChanged(auth, (user) => {
            if (user) {
                currentUser = user;
                loadUserData(user);
            } else {
                window.location.href = 'kirish.html';
            }
        });
    </script>
</body>
</html>
