                        <div class="info-value" id="viewBio">-</div>
                    </div>
                </div>
            </div>

            <!-- Edit Mode -->
            <div class="profile-section" id="editSection">
                <form id="profileForm">
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-user me-2"></i>To'liq ism *
                        </label>
                        <input type="text" class="form-control" id="editName" required placeholder="Ismingizni kiriting">
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-envelope me-2"></i>Email
                        </label>
                        <input type="email" class="form-control" id="editEmail" disabled>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-map-marker-alt me-2"></i>Manzil
                        </label>
                        <input type="text" class="form-control" id="editLocation" placeholder="Shahar, viloyat">
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-graduation-cap me-2"></i>O'qish joyi
                        </label>
                        <input type="text" class="form-control" id="editEducation" placeholder="Universitet yoki maktab nomi">
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-info-circle me-2"></i>Bio
                        </label>
                        <textarea class="form-control" id="editBio" placeholder="O'zingiz haqingizda qisqacha ma'lumot..."></textarea>
                    </div>

                    <button type="submit" class="save-btn" id="saveBtn">
                        <i class="fas fa-save"></i>
                        <span>Saqlash</span>
                        <div class="spinner hidden"></div>
                    </button>
                </form>
            </div>
